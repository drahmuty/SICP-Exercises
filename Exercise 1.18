(define (mult a b)
  (define (double x)
    (+ x x))
  (define (halve x)
    (/ x 2))
  (define (even x)
    (define (test x)
      (if (< (abs x) 2)
          x
          (test (- (abs x) 2))))
    (= (test x) 0))
  (define (iter a b c)
    (cond ((= b 0) c)
          ((even b) (iter (double a) (halve b) c))
          (else (iter a (- b 1) (+ a c)))))
  (iter a b 0))
