(define 
  (square x) 
  (* x x))

(define 
  (average x y) 
  (/ (+ x y) 2))

(define 
  (improve y x) 
  (average y (/ x y)))

(define
  (good-enough? y x)
  (< (abs (/ (- (improve y x) y) y)) 
     .001))

(define
  (sqrt-iter y x)
  (if (good-enough? y x)
      y
      (sqrt-iter (improve y x) x)))
