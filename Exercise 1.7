(define (sqrt x)
  (define (square x)
    (* x x))  
  (define (avg x y)
    (/ (+ x y) 2))
  (define (improve guess x)
    (avg guess (/ x guess)))
  (define (sqrt-iter guess x)
    (if (good-enough guess x) 
        guess
        (sqrt-iter (improve guess x) x)))
  (define (good-enough guess x)
    (and (< (abs (- (square guess) x)) .001)
         (< (abs (/ (- (improve guess x) guess) guess)) .0001)))
  (if (<= x 0)
      0
      (sqrt-iter 1 x)))
